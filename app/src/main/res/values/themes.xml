<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialPopupMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MPM.Menu.CustomBackground">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">.7</item>
        <item name="mpm_paddingTop">0dp</item>
        <item name="mpm_paddingBottom">0dp</item>
        <item name="mpm_spacing_from_anchor">8dp</item>
        <item name="mpm_anchor_background">@drawable/popup_menu_background</item>
        <item name="mpm_anchor_padding_horizontal">8dp</item>
        <item name="mpm_anchor_padding_vertical">4dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>
</resources>